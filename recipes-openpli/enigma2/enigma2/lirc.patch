+	if ((f = socket(AF_UNIX, SOCK_STREAM, 0)) >= 0) {
+		if (connect(f, (struct sockaddr *)&addr, sizeof(addr)) >= 0)
+ 			return true;
+		eDebug("Lirc: Connect to %s error !!!", addr.sun_path);
+		close(f);
+		f = -1;
+	}
+	else
+		eDebug("Lirc: Connect to %s error !!!", addr.sun_path);
+
+	return false;
